{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./cspell.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-words"],
  "ignorePaths": [
    ".cspell.txt",
    ".github/workflows/**",
    ".vscode/*.json",
    "**/.vercel",
    "**/dist/**",
    "**/build/**",
    "**/node_modules/**",
    "**/**/CHANGELOG.md",
    "**/**/CONTRIBUTORS.md",
    "pnpm-lock.yaml",
    "README.md",
    "coverage",
    "public",
    "prisma/migrations",
    "uploads"
  ]
}
